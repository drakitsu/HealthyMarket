{
  "manifest_version": 2,
 
  "name": "[Beta] Achetez responsable",
  "version": "0.3.0",
  "description": "Obtenez des informations complémentaires sur les articles de vos drives préférés",
   "permissions": [
          "tabs",
		  "*://www.carrefour.fr/*",
		  "*://www.carrefour.fr/*/*"
          
        ],
        
   "background": {
    "scripts":["background.js"],
    "persistent": false
 
  },
  "content_scripts": [
    {
      "matches": ["*://www.carrefour.fr/*"],
      "css": ["style.css"]
    }
  ],
 
 
  "web_accessible_resources": 
       ["images/*", "offTreatment.js"]
     ,
	 
	"icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" }
 
}
